<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog 
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog" 
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext" 
    xmlns:pro="http://www.liquibase.org/xml/ns/pro" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext 
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd 
    http://www.liquibase.org/xml/ns/pro 
    http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.0.xsd 
    http://www.liquibase.org/xml/ns/dbchangelog 
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd
    ">
	<changeSet id="202010211812" author="talgatulyzh">
		<createTable tableName="users">
			<column name="id" type="bigint">
				<constraints primaryKey="true" primaryKeyName="user_id_pk" />
			</column>
			<column name="username" type="varchar(250)">
				<constraints unique="true" uniqueConstraintName="username_unq" />
			</column>
			<column name="password" type="varchar(250)" />
		</createTable>

		<createTable tableName="book">
			<column name="id" type="bigint">
				<constraints primaryKey="true" primaryKeyName="book_id_pk" />
			</column>
			<column name="title" type="varchar(250)" />
			<column name="author" type="varchar(250)" />
			<column name="description" type="varchar(250)" />
		</createTable>

		<createTable tableName="rent">
			<column name="id" type="bigint">
				<constraints primaryKey="true" primaryKeyName="rent_id_pk" />
			</column>
			<column name="user_id" type="bigint">
				<constraints nullable="false" />
			</column>
			<column name="book_id" type="bigint">
				<constraints nullable="false" />
			</column>
		</createTable>
	</changeSet>

	<changeSet id="202010211813" author="talgatulyzh">
		<addForeignKeyConstraint  
			baseColumnNames="user_id"  
            baseTableName="rent"  
            constraintName="fk_rent_user_id"  
            referencedColumnNames="id"  
            referencedTableName="users"  
		/>  
		<addForeignKeyConstraint  
			baseColumnNames="book_id"  
            baseTableName="rent"  
            constraintName="fk_rent_book_id"  
            referencedColumnNames="id"  
            referencedTableName="book"  
		/>  
	</changeSet>

	<changeSet id="202203291234" author="talgatulyzh">
		<loadData 
			tableName="users"
			quotchar="'"
			file="db/data/users.csv"
		> 
		<column  
			name="id"
			type="SEQUENCE"
			defaultValue="sequence_generator"
		/> 
		<column  
			name="username" 
			header="username"
			type="string"
		/>
		<column  
			name="password"
			header="password"
			type="string"
		/>
		</loadData>
		<loadData
			tableName="book"
			quotchar="'"
			file="db/data/book.csv"
		>
			<column 
				name="id" 
				type="SEQUENCE"
				defaultValue="sequence_generator"
			/>
			<column 
				name="title"
				header="title" 
				type="string" 
			/>
			<column 
				name="author" 
				header="author"
				type="string" 
			/>
			<column 
				name="description" 
				header="description"
				type="string" 
			/>
		</loadData>
	</changeSet>
</databaseChangeLog>